@page
@model Host.Areas.Administrator.Pages.Shop.ProductPicture.CreateModel
@{
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            @*<div class="row ">*@
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Product Category</h3>
                    </div>
                    <div class="panel-body">
                      
                            <form method="post" class="form-horizontal" enctype="multipart/form-data">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label asp-for="ProductPicture.ProductId" class="control-label">Products</label>
                                        <select class="form-control" asp-for="ProductPicture.ProductId" asp-items='new SelectList(Model.ProductPicture.Products,"Id","Name")'>
                                            <option value="0">Products</option>
                                        </select>
                                         <span asp-validation-for="ProductPicture.ProductId" class="error"></span>
                                    </div>
                                </div>
                                <div class="col-md-10">
                                <div class="form-group">
                                    <label asp-for="ProductPicture.Picture" class="col-md-2 control-label">Picture</label><div class="col-md-10">
                                        <input type="file" class="form-control" asp-for="ProductPicture.Picture">
                                    </div>
                                </div>
                                </div>
                               
                                <div class="col-md-10">
                                <div class="form-group">
                                    <label asp-for="ProductPicture.PictureAlt" class="col-md-2 control-label">PictureAlt</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" asp-for="ProductPicture.PictureAlt">
                                    </div>
                                </div>
                                </div>


                                <div class="form-group">
                                    <label asp-for="ProductPicture.PictureTitle" class="col-md-2 control-label">PictureTitle</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" asp-for="ProductPicture.PictureTitle">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success waves-effect waves-light m-b-5" style="margin-left:450px">create</button>
                                <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5 " style="">back</a>
                               

                            </form> 
                    </div> 
                </div> 
        </div>
    </div>
</div>