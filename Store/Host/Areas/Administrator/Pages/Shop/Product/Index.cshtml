@page
@model Host.Areas.Administrator.Pages.Shop.Product.IndexModel
@{
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="pull-left page-title">Datatable</h4>
                    <ol class="breadcrumb pull-right">
                        <li><a href="#">Moltran</a></li>
                        <li><a href="#">Tables</a></li>
                        <li class="active">Datatable</li>
                    </ol>
                </div>
            </div>
            <div @* permission="@ShopPermission.CreateProductCategory" *@class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="./Create">Create New</a>
        </p>
    </div>
</div>
<div  class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در محصولات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="search.Name"></label>
                        <input class="form-control" asp-for="search.Name" placeholder="نام محصول">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="search.Code"></label>
                        <input class="form-control" asp-for="search.Code" placeholder="کد محصول">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="search.CategoryID"></label>
                        <select class="form-control" asp-for="search.CategoryID" asp-items="Model.ProductCategory">

                            <option value="0">گروه محصولی را انتخاب کنید</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Datatable</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <table id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Name</th>
                                                <th>Picture</th>
                                                <th>Creation Date</th>
                                                @*<th>Product Count</th>*@
                                                <th>Product Operation</th>
                                                
                                            </tr>
                                        </thead>


                                        <tbody>
                                            
                                               @foreach (var item in Model.product)
                                               {<tr>
                                                   <td>@item.Id</td>
                                                   <td>@item.Name</td>
                                                   <td><img src="~/ProductPicture/@item.Picture" style="width: 70px; height: 70px"></td>
                                                   <td>@item.CreationDate</td>
                                                   @*<td>@item.ProductsCount</td>*@
                                                   <td> <a class="btn btn-success btn-lg" asp-page="./Edit" asp-route-id=@item.Id>
                                                                       <i class="fa fa-edit"></i> Edit
                                                       </a>
                                                   </td>
                                                    </tr>
                                               }
                                           
                                          


                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- End Row -->


        </div> <!-- container -->

    </div> <!-- content -->

    <footer class="footer text-right">
        2015 © Moltran.
    </footer>
    <!-- CUSTOM JS -->
    <script src="~/js/jquery.app.js"></script>
</div>
@section Scripts{
    <script src="~/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/datatables/dataTables.bootstrap.js"></script>


    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
        }
