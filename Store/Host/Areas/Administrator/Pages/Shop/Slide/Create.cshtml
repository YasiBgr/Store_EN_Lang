@page
@model Host.Areas.Administrator.Pages.Shop.Slide.CreateModel
@{
}
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            @*<div class="row ">*@
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Product Category</h3>
                    </div>
                    <div class="panel-body">
                        <form method="post" class="form-horizontal" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="CreateSlide.Picture" class="control-label">Picture</label>
                                <input type="file" class="form-control" asp-for="CreateSlide.Picture" accept="image/*">
                                <span asp-validation-for="CreateSlide.Picture" class="error"></span>
                            </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.PictureAlt" class="control-label">Alt</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.PictureAlt">
                                        <span asp-validation-for="CreateSlide.PictureAlt" class="error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.PictureTitle" class="control-label"> PictureTitle</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.PictureTitle">
                                        <span asp-validation-for="CreateSlide.PictureTitle" class="error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.Heading" class="control-label">Heading</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.Heading">
                                        <span asp-validation-for="CreateSlide.Heading" class="error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.Title" class="control-label">Title</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.Title">
                                        <span asp-validation-for="CreateSlide.Title" class="error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.Text" class="control-label">Text</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.Text">
                                        <span asp-validation-for="CreateSlide.Text" class="error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.BtnText" class="control-label">BtnText</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.BtnText">
                                        <span asp-validation-for="CreateSlide.BtnText" class="error"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="CreateSlide.Link" class="control-label">Link</label>
                                        <input type="text" class="form-control" asp-for="CreateSlide.Link">
                                        <span asp-validation-for="CreateSlide.Link" class="error"></span>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light m-b-5" style="margin-left:450px">create</button>
                            <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5 " style="">back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
